<style>
    .page-link {
        border: 1px solid black;
        color: white;
    }
    .page-item.disabled .page-link {
        border-color: black;
    }
    .page-item.active .page-link {
        color: #0D6EFD
    }
</style>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @foreach (var link in _links)
        {
            <li @onclick="() => OnSelectedPage(link)" style="cursor: pointer;" class="page-item @(link.Enabled ? null : "disabled") @(link.Active ? "active" : null)">
                <span class="page-link" href="#" style="background-color: var(--rz-base-background-color);">@link.Text</span>
            </li>
        }
    </ul>
</nav>
